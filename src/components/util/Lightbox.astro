<script is:inline>
function initLightbox() {
  const dialog = document.getElementById('md-lightbox-dialog');
  const img = document.getElementById('md-lightbox-img');
  const caption = document.getElementById('md-lightbox-caption');
  const closeBtn = document.getElementById('md-lightbox-close');
  
  if (dialog && dialog.parentElement !== document.body) {
    document.body.appendChild(dialog);
  }

  let preventScroll = null;
  let recentlyOpenedUntil = 0;
  
  const lockScroll = () => {
    document.documentElement.classList.add('lightbox-open');
    preventScroll = (ev) => { 
      ev.preventDefault(); 
      ev.stopPropagation(); 
      if (typeof ev.stopImmediatePropagation === 'function') 
        ev.stopImmediatePropagation(); 
    };
    window.addEventListener('wheel', preventScroll, { passive: false, capture: true });
    window.addEventListener('touchmove', preventScroll, { passive: false, capture: true });
  };
  
  const unlockScroll = () => {
    document.documentElement.classList.remove('lightbox-open');
    if (preventScroll) {
      window.removeEventListener('wheel', preventScroll, { capture: true });
      window.removeEventListener('touchmove', preventScroll, { capture: true });
      preventScroll = null;
    }
  };

  const isLightboxLink = (a) => {
    if (!a) return false;
    const target = a.getAttribute('target');
    const rel = (a.getAttribute('rel') || '').toLowerCase();
    if (target === '_blank' || rel.includes('noopener') || rel.includes('noreferrer')) return false;
    if (a.getAttribute('data-no-lightbox') === 'true') return false;

    const href = a.getAttribute('href') || '';
    const classes = a.classList;
    const hasData = a.hasAttribute('data-lightbox') || a.hasAttribute('data-pswp-src');
    const isImageHref = /\.(jpg|jpeg|png|webp|gif)(\?.*)?$/i.test(href);

    return hasData
      || classes.contains('md-lightbox')
      || classes.contains('pswp-link')
      || classes.contains('post-image-link')
      || isImageHref;
  };

  const resolveClickTarget = (t) => {
    if (!(t instanceof Element)) return null;

    // 排除评论容器（根据你的结构同时匹配 #comment-section 与 .artalk）
    if (t.closest('#comment-section') || t.closest('.artalk')) return null;

    // 优先识别链接
    const a = t.closest('a');
    if (a && isLightboxLink(a)) return { type: 'a', el: a };

    // 兜底识别图片（再次排除评论容器与表情）
    const imgEl = t.closest('img');
    if (imgEl) {
      if (imgEl.closest('#comment-section') || imgEl.closest('.artalk')) return null;

      const altLower = (imgEl.getAttribute('alt') || '').toLowerCase();
      const isEmoji =
        imgEl.classList.contains('artalk-emoji') ||
        imgEl.classList.contains('atk-emoji') ||
        imgEl.hasAttribute('data-emoji') ||
        /emoji|表情/.test(altLower);
      if (isEmoji) return null;

      return { type: 'img', el: imgEl };
    }
    return null;
  };

  // 只保留这一份：点击处理（排除评论区）
  const handleClick = (e) => {
    const t = e.target;
    if (!(t instanceof Element)) return;

    // 灯箱自身的点击不处理
    if (dialog?.open && dialog.contains(t)) return;

    // 直接跳过评论容器的点击
    if (t.closest('#comment-section') || t.closest('.artalk')) return;

    const targetInfo = resolveClickTarget(t);
    if (!targetInfo) return;

    e.preventDefault();
    e.stopPropagation();
    if (typeof e.stopImmediatePropagation === 'function') {
      e.stopImmediatePropagation();
    }

    if (targetInfo.type === 'a') {
      openLightbox(targetInfo.el);
    } else {
      openLightboxFromImg(targetInfo.el);
    }
  };

  const sanitizeCaption = (text) => {
      const s = (text || '').trim();
      if (!s) return '';
      // 纯尺寸标记：|500 或 |500x300（忽略）
      if (/^\|\s*\d+(\s*x\s*\d+)?\s*$/i.test(s)) return '';
      // 尾随尺寸标记：alt|500 或 alt|500x300（去掉）
      const cleaned = s.replace(/\|\s*\d+(\s*x\s*\d+)?\s*$/i, '').trim();
      return cleaned;
  };

  const openLightbox = (a) => {
      const childImg = a.querySelector('img');
      const url =
          childImg?.currentSrc ||
          childImg?.src ||
          a.getAttribute('data-pswp-src') ||
          a.getAttribute('data-lightbox') ||
          a.getAttribute('href') ||
          '';
      const alt = a.getAttribute('data-alt') || childImg?.getAttribute('alt') || '';
      const title = a.getAttribute('data-title') || childImg?.getAttribute('title') || '';
      const captionText = title || alt || '未命名图片';
  
      if (img) {
          img.src = '';
          img.src = url;
          img.alt = alt || '';
      }
      if (caption) {
          caption.textContent = captionText;
          caption.style.display = captionText ? 'block' : 'none';
      }
  
      const show = () => {
          if (dialog) {
              dialog.style.position = 'fixed';
              dialog.style.inset = '0';
              dialog.style.width = '100%';
              dialog.style.height = '100%';
              dialog.style.padding = 'env(safe-area-inset-top) env(safe-area-inset-right) env(safe-area-inset-bottom) env(safe-area-inset-left)';
              dialog.style.margin = '0';
              dialog.style.border = 'none';
  
              if (typeof dialog.showModal === 'function') {
                  dialog.showModal();
              } else {
                  dialog.setAttribute('open', '');
              }
          }
          lockScroll();
          recentlyOpenedUntil = performance.now() + 400;
      };
  
      setTimeout(show, 50);
  };
  
  // 兜底：直接从 img 元素打开灯箱
  const openLightboxFromImg = (imgEl) => {
      const url = imgEl.getAttribute('data-pswp-src') || imgEl.currentSrc || imgEl.src || '';
      const rawAlt = imgEl.getAttribute('alt') || '';
      const rawTitle = imgEl.getAttribute('title') || '';
      const alt = sanitizeCaption(rawAlt);
      const title = sanitizeCaption(rawTitle);
      const captionText = title || alt || '未命名图片';
  
      if (img) {
          img.src = '';
          img.src = url;
          img.alt = alt || '';
      }
      if (caption) {
          caption.textContent = captionText;
          caption.style.display = captionText ? 'block' : 'none';
      }
  
      const show = () => {
          if (dialog) {
              dialog.style.position = 'fixed';
              dialog.style.inset = '0';
              dialog.style.width = '100%';
              dialog.style.height = '100%';
              dialog.style.padding = 'env(safe-area-inset-top) env(safe-area-inset-right) env(safe-area-inset-bottom) env(safe-area-inset-left)';
              dialog.style.margin = '0';
              dialog.style.border = 'none';
  
              if (typeof dialog.showModal === 'function') {
                  dialog.showModal();
              } else {
                  dialog.setAttribute('open', '');
              }
          }
  
          lockScroll();
          recentlyOpenedUntil = performance.now() + 400;
      };
  
      setTimeout(show, 50);
  };

  const handleClose = (e) => {
    e.preventDefault();
    e.stopPropagation();
    if (typeof e.stopImmediatePropagation === 'function') e.stopImmediatePropagation();
    if (dialog) {
      if (typeof dialog.close === 'function') {
        dialog.close();
      } else {
        dialog.removeAttribute('open');
      }
    }
    unlockScroll();
  };

  const handleDialogClick = (e) => {
    if (performance.now() < recentlyOpenedUntil) {
      e.preventDefault();
      e.stopPropagation();
      return;
    }
    if (e.target === dialog) {
      if (dialog) {
        if (typeof dialog.close === 'function') {
          dialog.close();
        } else {
          dialog.removeAttribute('open');
        }
      }
      unlockScroll();
    }
  };

  const handleKeydown = (e) => { 
    if (e.key === 'Escape') { 
      if (dialog) {
        if (typeof dialog.close === 'function') {
          dialog.close();
        } else {
          dialog.removeAttribute('open');
        }
      }
      unlockScroll(); 
    } 
  };

  document.removeEventListener('click', handleClick, { capture: true });
  closeBtn?.removeEventListener('pointerup', handleClose);
  closeBtn?.removeEventListener('click', handleClose);
  dialog?.removeEventListener('click', handleDialogClick);
  dialog?.removeEventListener('keydown', handleKeydown);
  dialog?.removeEventListener('close', unlockScroll);

  document.addEventListener('click', handleClick, { capture: true });
  closeBtn?.addEventListener('pointerup', handleClose);
  closeBtn?.addEventListener('click', handleClose);
  dialog?.addEventListener('click', handleDialogClick);
  dialog?.addEventListener('keydown', handleKeydown);
  dialog?.addEventListener('close', unlockScroll);

  const handleResize = () => {
    if (dialog && dialog.open) {
      dialog.style.width = '100%';
      dialog.style.height = '100%';
    }
  };

  window.removeEventListener('resize', handleResize);
  window.addEventListener('resize', handleResize);

  return () => {
    document.removeEventListener('click', handleClick, { capture: true });
    closeBtn?.removeEventListener('pointerup', handleClose);
    closeBtn?.removeEventListener('click', handleClose);
    dialog?.removeEventListener('click', handleDialogClick);
    dialog?.removeEventListener('keydown', handleKeydown);
    dialog?.removeEventListener('close', unlockScroll);
    window.removeEventListener('resize', handleResize);
  };
}

let cleanup = initLightbox();

const handleNavigation = () => {
  if (cleanup) cleanup();
  cleanup = initLightbox();
};

document.addEventListener('astro:page-load', handleNavigation);
document.addEventListener('astro:after-swap', handleNavigation);
document.addEventListener('popstate', handleNavigation);
document.addEventListener('pushstate', handleNavigation);
document.addEventListener('replacestate', handleNavigation);

window.__mdLightboxInit = true;
</script>
    