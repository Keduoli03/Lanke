<!-- 文章底部许可信息组件 -->
---
import { Icon } from 'astro-icon/components';
import { siteConfig } from '../../config';

interface Props {
  postUrl: string; 
  license?: string;
}

const { postUrl, license = 'CC BY-NC-SA 4.0' } = Astro.props;
const fullPostUrl = postUrl; 
---

<div class="post-info-card">
  <div class="info-section">
    <div class="info-item">
      <span class="info-label">本文作者</span>
      {/* 使用 siteConfig.title */}
      <span class="info-value">{siteConfig.title}</span>
    </div>
    <div class="info-item">
      <span class="info-label">本文链接</span>
      <a href={fullPostUrl} class="info-value link" title="点击访问原文">{fullPostUrl}</a>
    </div>
    <div class="info-item">
      <span class="info-label">版权声明</span>
      <span class="info-value">
        本博客所有文章除特别声明外，均采用 <a href="https://creativecommons.org/licenses/by-nc-sa/4.0/" target="_blank" rel="noopener noreferrer" class="link">{license}</a> 许可协议。转载请注明出处！
      </span>
    </div>
  </div>
  <div class="actions-section">
    <button class="share-btn" data-url={fullPostUrl} title="复制分享链接">
      <Icon name="material-symbols:share-outline" class="share-icon" />
      <span>一键分享</span>
    </button>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const shareBtn = document.querySelector('.share-btn');
    if (shareBtn) {
      shareBtn.addEventListener('click', async (e) => {
        const button = e.currentTarget as HTMLButtonElement;
        const urlToCopy = button.dataset.url;
        if (!urlToCopy) return;

        try {
          await navigator.clipboard.writeText(urlToCopy);
          const originalText = button.innerHTML;
          button.innerHTML = `
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="share-icon"><path d="M20 6L9 17l-5-5"></path></svg>
            <span>复制成功!</span>
          `;
          
          setTimeout(() => {
            button.innerHTML = originalText;
          }, 2000);

        } catch (err) {
          console.error('无法复制链接: ', err);
          alert('复制失败，请手动复制链接。');
        }
      });
    }
  });
</script>

<style>
  .post-info-card {
    --card-bg: color-mix(in srgb, var(--theme-color) 5%, var(--content-pane-bg));
    --card-border: color-mix(in srgb, var(--theme-color) 20%, transparent);
    --card-shadow: color-mix(in srgb, var(--theme-color) 15%, transparent);

    background-color: var(--card-bg);
    border: 1px solid var(--card-border);
    border-radius: 0.75rem;
    margin-top: 2rem;
    padding: 1rem;
    display: flex;
    flex-direction: column;
    gap: 1rem;
    box-shadow: 0 2px 8px var(--card-shadow);
    transition: all 0.3s ease;
  }

  html.dark .post-info-card {
    --card-bg: color-mix(in srgb, var(--theme-color) 20%, var(--content-pane-bg));
    --card-border: color-mix(in srgb, var(--theme-color) 50%, transparent);
    --card-shadow: color-mix(in srgb, var(--theme-color) 20%, transparent);
  }

  .info-section {
    display: grid;
    gap: 0.75rem;
  }

  .info-item {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .info-label {
    font-size: 0.75rem;
    font-weight: 600;
    color: var(--text-secondary);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .info-value {
    font-size: 0.875rem;
    color: var(--text-primary);
    word-break: break-all;
    line-height: 1.4;
  }

  .info-value .link {
    color: var(--theme-color);
    text-decoration: none;
    transition: color 0.2s ease;
    font-weight: 500;
  }

  .info-value .link:hover {
    color: color-mix(in srgb, var(--theme-color) 80%, var(--text-primary));
    text-decoration: underline;
  }

  .actions-section {
    border-top: 1px solid var(--card-border);
    padding-top: 1rem;
    display: flex;
    justify-content: center;
  }

  .share-btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    background: var(--theme-color);
    color: var(--text-on-theme);
    border: none;
    border-radius: 9999px;
    padding: 0.5rem 1rem;
    font-size: 0.875rem;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
    box-shadow: 0 2px 8px -3px color-mix(in srgb, var(--theme-color) 50%, transparent);
  }

  .share-btn:hover {
    transform: translateY(-2px) scale(1.02);
    background: color-mix(in srgb, var(--theme-color) 90%, #000);
    box-shadow: 0 4px 12px -5px color-mix(in srgb, var(--theme-color) 45%, transparent);
  }
  
  .share-btn:active {
    transform: translateY(-1px) scale(0.98);
    box-shadow: 0 2px 8px -3px color-mix(in srgb, var(--theme-color) 50%, transparent);
  }

  .share-btn .share-icon {
    width: 1rem;
    height: 1rem;
  }

  /* 移动端特定样式 */
  @media (max-width: 640px) {
    .post-info-card {
      margin-top: 1.5rem;
      padding: 0.875rem;
      border-radius: 0.625rem;
      gap: 0.875rem;
    }
    
    .info-section {
      gap: 0.625rem;
    }
    
    .info-label {
      font-size: 0.7rem;
    }
    
    .info-value {
      font-size: 0.8rem;
    }
    
    .actions-section {
      padding-top: 0.875rem;
    }
    
    .share-btn {
      padding: 0.375rem 0.875rem;
      font-size: 0.8rem;
      gap: 0.375rem;
    }
    
    .share-btn .share-icon {
      width: 0.875rem;
      height: 0.875rem;
    }
  }

  /* 平板和桌面端样式 */
  @media (min-width: 768px) {
    .post-info-card {
      flex-direction: row;
      align-items: center;
      padding: 1.25rem;
    }
    
    .info-section {
      flex: 1;
      gap: 1rem;
    }
    
    .actions-section {
      border-top: none;
      border-left: 1px solid var(--card-border);
      padding-top: 0;
      padding-left: 1.25rem;
      justify-content: flex-start;
      align-items: center;
    }
    
    .share-btn {
      padding: 0.625rem 1.25rem;
      font-size: 0.9rem;
    }
  }

  /* 大屏幕样式 */
  @media (min-width: 1024px) {
    .post-info-card {
      padding: 1.5rem;
    }
    
    .info-label {
      font-size: 0.8rem;
    }
    
    .info-value {
      font-size: 0.95rem;
    }
    
    .share-btn {
      padding: 0.75rem 1.5rem;
      font-size: 1rem;
    }
  }
</style>
