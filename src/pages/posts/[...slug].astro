	const paths: Array<{
		params: { slug: string | undefined };
		props: { posts?: CollectionEntry<'posts'>[]; entry?: CollectionEntry<'posts'> };
	}> = [
		{
			params: { slug: undefined }, // åˆ—è¡¨é¡µé¢
			props: { posts: posts.sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf()) }
		}
	];
	
	// æ·»åŠ å•ç¯‡æ–‡ç« è·¯å¾„
	posts.forEach(post => {
